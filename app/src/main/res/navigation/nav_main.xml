<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ir.noori.taskmanager.presentation.ui.login.LoginFragment"
        android:label="fragment_login"
        app:route="login_fragment"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="ir.noori.taskmanager.presentation.ui.user.ProfileFragment"
        android:label="fragment_profile"
        app:route="profile_fragment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/taskListFragment"
        android:name="ir.noori.taskmanager.presentation.ui.tasklist.TaskListFragment"
        android:label="fragment_task_list"
        app:route="task_list_fragment"
        tools:layout="@layout/fragment_task_list" />

    <dialog
        android:id="@+id/addTaskDialogFragment"
        app:route="add_task_dialog_fragment"
        android:name="ir.noori.taskmanager.presentation.ui.tasklist.AddTaskDialogFragment"
        android:label="AddTaskDialogFragment" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="ir.noori.taskmanager.presentation.ui.splash.SplashFragment"
        android:label="fragment_splash"
        app:route="splash_fragment"
        tools:layout="@layout/fragment_splash"/>

</navigation>